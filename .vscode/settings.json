{
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveForeground": "#15202b99",
    "titleBar.activeBackground": "#CDA5B5",
    "titleBar.inactiveBackground": "#CDA5B5",
    "activityBar.activeBackground": "#F05BDF",
    "activityBar.activeBorder": "#009f7b",
    "activityBar.background": "#CDA5B5",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#009f7b",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#CDA5B5",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#F05BDF"
  },
  // These are all my auto-save configs
  "editor.formatOnSave": true,
  // turn it off for JS and JSX, we will do this via eslint
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  // tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "prettier.disableLanguages": ["javascript", "javascriptreact"],
  "peacock.color": "#FFC600"
}
